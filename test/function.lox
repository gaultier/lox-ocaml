// One argument
fun simplePrint(a) { print a; }

simplePrint(1); // expect: 1.

// Global
var a = 2;
simplePrint(a); // expect: 2.


// Shadowing local
{
    var a = 3;
    simplePrint(a); // expect: 3.
}

// Assigned global
{
    a = 4;
    simplePrint(a); // expect: 4.
}

// New local
{
    var b = 5;
    simplePrint(b); // expect: 5.
}


// Two arguments
fun printAdd(a, b) { 
    var c = a+b;
    print(c); 
}

printAdd(a, 2); // expect: 6.

printAdd(2+2, 4-1); // expect: 7.

// Local should not conflict with function body
{
    var c = 99;
    printAdd(8, 0); // expect: 8.
}


// Modifying globals
fun setGlobal(b) {
    a = b * b;
}

setGlobal(3); 
print a; // expect: 9.


// Recursion
fun simpleRec(i) {
    if (i == 10) print i;
    else simpleRec(i-1);
}

simpleRec(20); // expect: 10.

// Local function
{
    fun simpleRec(i) {
        if ( i == 11) print i;
        else simpleRec(i-1);
    }

    simpleRec(20); // expect: 11.
}




